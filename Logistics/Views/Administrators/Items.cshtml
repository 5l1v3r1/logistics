@model IEnumerable<Logistics.Models.Item>
@{
    Layout = "~/Views/Shared/_LayoutAdministrators.cshtml";
}

<div class="row page-titles">

    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Semua Barang</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Kelola Barang</li>
        </ol>
    </div>
</div>


<div class="card">
    <div class="card-body">
        <div class="table-responsive m-t-40">
            <table id="myTable" class="table table-bordered table-striped">
                <thead class="table-header">
                    <tr class="color-table">
                        <th>Nama Barang</th>
                        <th>Stok</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Amount (@item.Unit.ToString())</td>
                            <td>

                                <a href="@Url.Action("AddStock", new { id = item.Id })" target="_blank" data-toggle="tooltip" data-original-title="Tambah Stok">
                                    <i style="margin-left:5px" class="fa fa-plus m-1"></i>
                                </a>
                                <a href="@Url.Action("EditItem", new { id = item.Id })" target="_blank" data-toggle="tooltip" data-original-title="Edit">
                                    <i class="fa fa-edit m-1"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/assets/css/custom.css">
}
@section Scripts{
    <script src="~/assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();

        });
    </script>
}


