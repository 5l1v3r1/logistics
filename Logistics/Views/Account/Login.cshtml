}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {

            $('#js-carousel-7').slick('setOption', 'responsive', [{
                breakpoint: 992,
                settings: {
                    slidesToShow: 3
                }
            }, {
                breakpoint: 768,
                settings: {
                    slidesToShow: 2
                }
            }, {
                breakpoint: 554,
                settings: {
                    slidesToShow: 1
                }
            }], true);
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#Register").submit(function (e) {
                e.preventDefault();
                var data = $('#Register').serialize();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Register", "Account")',
                    data: data,
                    success: function (data) {
                        if (data == "OK") {
                            location.href = "@Url.Action("Index","Home")"
                        } else if(data == "Invalid") {
                            swal({
                                title: "Kode Salah",
                                text: "Hanya dapat menggunakan format ( A-Z, 0-9 dan - )",
                                icon: "error"
                            });
                        }else if(data == "Exists") {
                            swal({
                                title: "Kode sudah digunakan",
                                text: "Gunakan Kode lain karena kode sudah ada",
                                icon: "error"
                            });
                        }
                    }
                });
            });
        });
    </script>
}
